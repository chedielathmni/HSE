{% extends '@EasyAdmin/default/edit.html.twig' %}


{% block body_javascript %}
{{parent()}}

<script>
    document.getElementById('product_dureeConservation').setAttribute('min', 0)

    let fournisseur =  $("#product_fournisseur")
    if (fournisseur[0].value != "") {
        $(".field-fournisseur").hide()
        $(".field-adresse").hide()
    }
    fournisseur.on('change', (e) => {
        if (e.currentTarget.value != '') {
            $(".field-fournisseur").hide()
            $(".field-adresse").hide()
        }
        else {
            $(".field-fournisseur").show()
            $(".field-adresse").show()
        }
    })


</script>
{% endblock %}